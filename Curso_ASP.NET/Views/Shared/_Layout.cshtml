<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Estilo_2012.css" />
</head>
<body>
    <header>
        <div class="container">
            @Html.ActionLink("Condominios Chile", "Index", "Home", new { area = "" }, new { @class = "logo" })
            <nav>
                <ul class="main-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Registrate", "Register", "Account")</li>
                    <li>@Html.ActionLink("Ingresar", "Login", "Account")</li>
                </ul>
            </nav>
        </div>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Desarrollado por Octavio in Motion - Todos los Derechos reservados.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>